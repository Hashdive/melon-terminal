{
  "version": 2,
  "name": "interface",
  "rewrites": [
    { "source": "^/static/(.*)", "destination": "/static/$1" },
    { "source": "^/favicon.png", "destination": "/favicon.png" },
    { "source": "^/manifest.json", "destination": "/manifest.json" },
    { "source": "^/robots.txt", "destination": "/robots.txt" },
    { "source": "^/(.*)", "destination": "/index.html" }
  ],
  "build": {
    "env": {
      "MELON_MAINNET_DEPLOYMENT": "./deployments/mainnet-deployment.json",
      "MELON_MAINNET_SUBGRAPH": "https://api.thegraph.com/subgraphs/name/melonproject/melon",
      "MELON_KOVAN_DEPLOYMENT": "./deployments/kovan-deployment.json",
      "MELON_KOVAN_SUBGRAPH": "https://api.thegraph.com/subgraphs/name/melonproject/melon-kovan"
    }
  }
}
